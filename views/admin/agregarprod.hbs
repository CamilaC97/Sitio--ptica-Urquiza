<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un Nuevo Destacado</h4>
            <form action="/admin/listaprod/agregarprod" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Marca" name="marca">
                </div>
                <div class="form-group">
                    <textarea name="modelo" type="text" class="form-control" placeholder="Modelo"></textarea>
                </div>
                <button type="submit" class="btn btn-info ">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>