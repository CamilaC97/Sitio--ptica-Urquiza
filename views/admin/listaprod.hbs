<div class="container" style="padding: 100px">
    {{!-- fila 1--}}
    <div class="row">
        <div class="col">
            <p style="float:right;">
                <span>Hola {{persona}} !</span>
                <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesi√≥n
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1--}}
    {{!--fila 2--}}
    <div class="row">
        <div class="col-6" style="margin-top: -9px;">
            <h2>Listado de Productos Destacados</h2>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/listaprod/agregarprod/" class="btn btn-success"> <i class="fa fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-4 text-right">
            <form class="form-inline" action="/admin/listaprod" method="get">
                <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if
                    q}}value="{{q}}" {{/if}}>
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>
    {{!--fin fila 2--}}
    {{!--inicio fila 3--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Modelo</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-righ"> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listaprod}}
                    <tr>

                        <th scope="row">{{id}}</th>
                        <td>{{modelo}}</td>
                        <td>{{marca}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-right">
                            <a href="/admin/listaprod/modificarprod/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/listaprod/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless novedades.length}}
                     No se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
            {{/if}}
        </div>
    </div>
    {{!--fin fila 3--}}

</div> {{!-- fin container--}}