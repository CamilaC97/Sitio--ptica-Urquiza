<div class="container" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Producto Destacado</h4>

            <form action="/admin/listaprod/modificarprod" method="post">
                <input type="hidden" value="{{producto.id}}" name="id">
                <div class="form-group">
                    <label for="">Marca</label>
                    {{!-- <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}"> --}}
                    <textarea name="marca" class="form-control"
                        style="width: 100%; height: 125px;">{{producto.marca}}</textarea>
                </div>
                <div class="form-group">
                    <label for="">Modelo</label>
                    {{!-- <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}"> --}}
                    <textarea name="modelo" class="form-control"
                        style="width: 100%; height: 125px;">{{producto.modelo}}</textarea>
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{producto.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn btn-info">Modificar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>